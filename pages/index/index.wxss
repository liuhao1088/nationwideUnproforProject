.container {}

input {
  height: 100%;
  width: 100%;
  line-height: 60rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
}

button::after {
  border: 0;
}

.search {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid rgba(187, 187, 187, 100);
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.search-wrap {
  width: 90%;
  height: 70%;
  line-height: 70rpx;
  border: 0rpx solid red;
  display: flex;
}

.input-item {
  flex: 1;
  border: 0rpx solid black;
}

.icon-item {
  height: 100%;
  width: 60rpx;
  line-height: 60rpx;
  border: 0rpx solid #bbffcc;
  text-align: center;
}

.but-item {
  width: 240rpx;
  height: 100%;
  border: 0rpx solid orange;
  padding-left: 40rpx;
}

.but-item button {
  height: 100%;
  border-radius: 10rpx;
  background-color: rgb(23, 100, 152);
  color: rgb(255, 255, 255);
  font-size: 28rpx;
  text-align: center;
  padding: 0;
}